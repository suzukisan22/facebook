<!DOCTYPE html>
<html>
<head>
  <title>Facebook</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<header>
  <nav class="navbar">
    <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <% if user_signed_in? %>
          <%= link_to "", authenticated_root_path, class: "fa fa-facebook-official fa-3x header-icon" %>
        <% else %>
          <%= link_to "Facebook", unauthenticated_root_path, class: "navbar-brand header-title" %>
        <% end %>
        <%= link_to edit_user_registration_path, class: "pull-right to-edit sm-only" do %>
          <span id="header-img"><%= profile_img(current_user) if user_signed_in? %></span>
        <% end %>
      </div><!-- nav-bar -->
      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="top-nav nav navbar-nav navbar-right">
          <% if user_signed_in? %>
            <li class="except-sm">
              <%= link_to edit_user_registration_path, class: "to-edit except-sm" do %>
                <ul class="nav navbar-nav">
                  <li id="header-img"><%= profile_img(current_user) %></li>
                  <li id="header-name"><%= current_user.name %></li>
                </ul>
              <% end %>
            </li>
          <% end %>
          <li class="dropdown">
            <ul class="sm-menu sm-only">
              <% if user_signed_in? %>
            　  <li><%= link_to 'ユーザー一覧', users_path %></li>
                <li><%= link_to '友達一覧', user_path(current_user.id) %></li>
                <li><%= link_to "メッセージ", conversations_path %></li>
                <li><%= link_to 'マイページ', edit_user_registration_path %></li>
                <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete %></li>
              <% else %>
                <li><%= link_to 'ログイン', new_user_session_path %></li>
                <li><%= link_to 'サインアップ', new_user_registration_path %></li>
              <% end %>
            </ul>
          </li>
            <a href="#" class="dropdown-toggle except-sm header-caret" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
              <span class="caret"></span>
            </a>
            <ul class="dropdown-menu">
              <% if user_signed_in? %>
            　  <li><%= link_to 'ユーザー一覧', users_path %></li>
                <li><%= link_to '友達一覧', user_path(current_user.id) %></li>
                <li><%= link_to "メッセージ", conversations_path %></li>
                <li><%= link_to 'マイページ', edit_user_registration_path %></li>
                <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete %></li>
              <% else %>
                <li><%= link_to 'ログイン', new_user_session_path %></li>
                <li><%= link_to 'サインアップ', new_user_registration_path %></li>
              <% end %>
            </ul>
          </li>
        </ul>
      </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
  </nav>
</header>
<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= yield %>
    <div>
  </div>
</div>

</body>
</html>
